<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aml.sportteam.MainActivity">
    
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/popo"
        android:scaleType="centerCrop"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karate player"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"

        android:id="@+id/karate"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports Don't Build Charater. They Reveal it!"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="18sp"
        android:layout_below="@+id/karate"
        android:textColor="@android:color/black"
        android:padding="5dp"
        android:textStyle="bold"
        android:id="@+id/quoto"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name  :  "
            android:textSize="18sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/quoto"
            android:textColor="@android:color/black"
            android:id="@+id/name"
            android:fontFamily="sans-serif-condensed"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Aml Hanfy Mahmoud"
          android:fontFamily="sans-serif-condensed"
          android:layout_below="@+id/name"
          android:textColor="@android:color/black"
          android:id="@+id/aml"
          android:paddingLeft="20dp"
          android:textSize="18sp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Email  :  "
          android:textSize="18sp"
          android:textStyle="bold"
          android:padding="10dp"
          android:layout_below="@+id/aml"
          android:textColor="@android:color/black"
          android:id="@+id/email"
          android:fontFamily="sans-serif-condensed"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="amlhanfy05@gmail.com"
          android:layout_below="@+id/email"
          android:id="@+id/em"
          android:textColor="@android:color/black"
          android:paddingLeft="20dp"
          android:fontFamily="sans-serif-condensed"
          android:textSize="18sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone  :  "
            android:layout_below="@+id/em"
            android:textSize="18sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:id="@+id/phone"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01278905297"
            android:layout_below="@+id/phone"
            android:id="@+id/number"
            android:paddingLeft="20dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-condensed"
            android:textSize="18sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/number"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
      android:layout_margin="25dp"/>
</RelativeLayout>
